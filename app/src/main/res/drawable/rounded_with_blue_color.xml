<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#142551" />

    <!-- Border (stroke) -->
    <stroke
        android:width="1dp"
        android:color="#6EA8E6" />

    <!-- Rounded corners -->
    <corners android:radius="@dimen/_30sdp" />

    <!-- Optional padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#142551">


    <!-- Profile Image -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/user_profile"
        android:scaleType="centerCrop"
        android:contentDescription="Profile Image"

       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- User Name -->
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test User"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/profileImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Seat No -->
    <TextView
        android:id="@+id/tvSeatNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seat No: A-204"

        android:textColor="@color/white"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Email -->
    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="testuser@example.com"
        android:textSize="@dimen/_11sdp"
       android:textColor="@color/white"

        app:layout_constraintTop_toBottomOf="@id/tvSeatNo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>
    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>


    <TextView
        android:id="@+id/tv_ecode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-code"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>


    <TextView
        android:id="@+id/tv_kyc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kyc Aadhar details"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_ecode"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/_20sdp"
android:visibility="invisible"
        android:layout_marginTop="4dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_front"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_20sdp"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/tv_kyc"
        app:cardPreventCornerOverlap="true">

        <ImageView
            android:id="@+id/image_adadhar_frontside"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_20sdp"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/card_front"
        app:cardPreventCornerOverlap="true">

        <ImageView
            android:id="@+id/image_adadhar_backside"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scaleType="centerInside"
            />

    </androidx.cardview.widget.CardView>


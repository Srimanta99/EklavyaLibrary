<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_white_with__black_broder"

    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:id="@+id/ttt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_46sdp"
         android:gravity="center"
        android:background="#142551"
        app:layout_constraintTop_toTopOf="parent"
        android:text="De-activation Alert"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintLeft_toLeftOf="parent"></TextView>

    <ImageView
        android:id="@+id/img_cross"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/cross"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="@dimen/_3sdp"
        app:layout_constraintTop_toBottomOf="@id/ttt">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:id="@+id/popupText"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/blue"
        android:layout_height="wrap_content"
        android:text=" The account was suspended/deactivated, Please Contact admin"
        android:layout_width="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_pay_now"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="Pay Now"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/green_rounded_corner_button_with_no_broder"
                android:layout_gravity="center"></androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>